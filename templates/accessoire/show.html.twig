{% extends 'base.html.twig' %}

{% block title %}Détails de l'accessoire{% endblock %}

{% block body %}
    <h1>Détails de l'accessoire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ accessoire.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ accessoire.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ accessoire.description }}</td>
            </tr>
            {# Ajoutez d'autres champs si nécessaire #}
        </tbody>
    </table>

    <a href="{{ path('accessoire_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('accessoire_edit', {'id': accessoire.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('accessoire/_delete_form.html.twig') }}
{% endblock %}