{% extends 'base.html.twig' %}

{% block title %}Supprimer un accessoire{% endblock %}

{% block body %}
<form method="post" action="{{ path('accessoire_delete', {'id': accessoire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet objet ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accessoire.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
{% endblock %}