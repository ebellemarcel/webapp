{% extends 'base.html.twig' %}

{% block title %}Détails de la Demande de Contact{% endblock %}

{% block body %}
    <h1>Détails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.nom }}</td>
            </tr>
			 <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ accessoire.message }}</td>
            </tr>
        
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}