{% extends 'base.html.twig' %}

{% block title %}Supprimer un Contact{% endblock %}

{% block body %}
<form method="post" action="{{ path('contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette demande ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
{% endblock %}